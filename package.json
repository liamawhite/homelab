{
    "name": "main",
    "packageManager": "yarn@4.6.0",
    "scripts": {
        "check": "yarn gen && yarn format",
        "gen": "nix develop --command yarn tsx .gen.ts",
        "format": "nix develop --command yarn prettier --write .",
        "deploy": "yarn homeassistant && cd project && PULUMI_K8S_ENABLE_PATCH_FORCE=true pulumi up -yf -s liamawhite/homelab/homelab",
        "cancel": "cd project && pulumi cancel -s liamawhite/homelab/homelab",
        "refresh": "cd project && pulumi refresh -yf -s liamawhite/homelab/homelab",
        "passwords": "nix develop --command pulumi stack output --show-secrets -s liamawhite/homelab/homelab --json | jq -r '.passwords'",
        "k9s": "nix develop --command env KUBECONFIG=kubeconfig k9s",
        "homeassistant": "nix develop --command yarn tsx components/kubernetes/homeassistant/extract-config.ts"
    },
    "dependencies": {
        "@pulumi/command": "1.0.0",
        "@pulumi/kubernetes": "4.21.1",
        "@pulumi/pulumi": "3.147.0",
        "@pulumi/random": "4.17.0",
        "@pulumi/tailscale": "0.17.5",
        "@pulumi/tls": "5.1.0",
        "@tetratelabs/pulumi-checkmate": "1.8.4",
        "axios": "1.7.9",
        "js-yaml": "^4.1.0"
    },
    "devDependencies": {
        "prettier": "3.4.2",
        "tsx": "4.19.2"
    }
}
